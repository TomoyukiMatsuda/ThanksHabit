<%= form_with model: group, local: true, class: "group-form" do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="group-form__group">
    <%= f.label :name, 'グループ名（20文字以内）', class: "group-form__group--label" %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="group-form__submit">
    <%= f.submit '登録', class: "btn group-form__submit--btn" %>
  </div>
<% end %>