<h3 class="text-center">感謝記録</h3>
<table class="table mt-4">
  <thead class="bg-secondary text-white">
    <tr>
      <% if current_page?(user_path(user)) %>
        <th><%= user.name %> さんが伝えた人（グループ）</th>
      <% else %>
        <th>伝えた人</th>
        <th>伝えられた人</th>
      <% end %>
      <th>内容</th>
      <th><%= sort_link  q, :created_at, '日付(ソート)' %></th>
    </tr>
  </thead>
  <% thanks.each do |thank| %>
    <tbody>
      <tr>
        <% if current_page?(user_path(user)) %>
          <td><%= "#{thank.receiver.name}（#{thank.group.name}）" %></td>
        <% else %>
          <td><%= thank.user.name %></td>
          <td><%= thank.receiver.name %></td>
        <% end%>
        <td><%= thank.content %></td>
        <td><%= l thank.created_at %></td>
      </tr>
    </tbody>
  <% end %>
</table>
<%= paginate thanks %>